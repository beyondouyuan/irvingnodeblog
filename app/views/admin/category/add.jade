extends ../layout
block content
	h2.page-header 添加分类

	if errors && errors.length
		.errors
			each error in errors
				p.alert.alert-danger #{error.msg}

	//- 修改代码以便代码复用，用于文章编辑,action由后端传递而来
	form.vertical-form(method="post", action=action)
		.form-group
			label(for="name") 名称
			input.form-control.input-lg(name="name", type="text", required, placeholder="请输入名称...",value= category.name)
		button.btn.btn-lg.btn-info(type="submit")= category._id === '' ? "保存修改" :"添加分类"
